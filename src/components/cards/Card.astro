---
import type { CardData } from "@/src/types/cardData";

interface Props {
  card: CardData;
}

const { card } = Astro.props;
const displayTitle = card.title.replace(/Elements?/g, '');
---

<a
  href={card.link}
  class="block p-6 bg-theme-secondary border-2 border-theme-border rounded-lg hover:border-theme-accent transition-colors duration-200"
>
  <h2 class="text-2xl font-bold text-theme-highlight mb-2">
    {displayTitle}
  </h2>
  <p class="text-theme-text text-clip line-clamp-4">
    {card.description}
  </p>
</a>
